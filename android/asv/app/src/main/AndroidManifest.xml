<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asv">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignActivity"
            android:label="@string/title_activity_signgin" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".SignActivity" >
        </activity>
        <activity
            android:name=".CreateChatActivity"
            android:label="@string/title_activity_create_chat"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".SettingActivity"
            android:label="@string/title_activity_setting"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".EventActivity"
            android:label="@string/title_activity_event"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".AskMailActivity"
            android:label="@string/title_activity_ask_mail"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".MajVersionActivity"
            android:label="@string/title_activity_maj_version" >
        </activity>


    </application>

</manifest>
